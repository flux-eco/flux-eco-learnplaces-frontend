{
  "$schema": "../schema/flux-eco-learnplaces-frontend-config-schema.json",
  "name": "flux-eco-learnplaces-frontend",
  "inboundsConfig": {
    "httpBindingConfig": {
      "server": {
        "host": "${SERVER_HOST}",
        "port": "${SERVER_PORT}"
      },
      "policies": null,
      "routes": {
        "static": {
          "/public": {
            "/index.html": {
              "Content-Type": "text/html"
            },
            "/main.mjs": {
              "Content-Type": "application/javascript"
            },
            "/**/*.mjs": {
              "Content-Type": "application/javascript"
            },
            "/**/*.ttf": {
              "Content-Type": "application/font-ttf"
            },
            "/**/*.wof": {
              "Content-Type": "application/font-woff"
            }
          }
        },
        "api": {
          "/api/{pageName}/readPageStructure": {
            "Content-Type": "application/json",
            "parameterNames": ["pageName"],
            "actionName": "readPageStructure",
            "actionType": "requestHandler"
          }
        }
      }
    }
  },
  "apiConfig": {
    "outbounds": {
      "proxyRequestHandler": {
        "actionName": "handleRequest",
        "parametersMapping": {
          "path": "path"
        }
      }
    }
  },
  "outboundsConfigs": {
    "proxyRequestHandler": {
      "server": {
        "port": "${BACKEND_SERVER_PORT}",
        "host": "${BACKEND_SERVER_HOST}"
      },
      "apiBasePath": "/api"
    }
  }
}